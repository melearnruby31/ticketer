<%= flash_helper_method %>

<h1>Home Page</h1>
<%= Date.today %>

<%= form_for(@work_request) do |f| %>

	<p>
	
	<%= f.label(:name) %> 
	<%= f.text_field(:name) %>

	</p>

	<p>

	<%= f.label(:address) %> 
	<%= f.text_field(:address) %>
	
	</p>	
	
	<p>
	
	<%= f.label(:phone) %> 
	<%= f.text_field(:phone) %>

	</p>
	
	<p>

	<%= f.label(:problem) %> 
	<%= f.text_area(:problem) %>

	</p>


	<p> 
	<%= f.submit('Submit Work Request') %>
	
	</p>


<% end %>